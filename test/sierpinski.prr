#!/usr/bin/env purr

def printSierpinski(n):
	var y = n - 1;
    var x;
	var i;

    while y >= 0:
		i = 0;

		while i < y:
			print(" ");
			i = i + 1;
        end

		x = 0;

		while x + y < n:
			if x & y != 0:
				print("  ");
			else:
				print("* ");
            end
			x = x + 1;
        end

		print("\n");
		y = y - 1;
    end
end


var n = 16;
printSierpinski(n);
