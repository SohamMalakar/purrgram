var x = 10; # global variable

if x > 0 and x <= 5:
    print("hello\n");
elif x < 0 or x >= 20:
    print("world\n");
else:
    print("aliens\n");
end


def greet(name):
    var temp = "hello, " + name + "!\n"; # local variable
    return temp;
end


while x > 0:
    print(greet("purrgram"));
    x = x - 1;
end
